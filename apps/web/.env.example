# ======================================================================
# ENVIRONMENT VARIABLES EXAMPLE
# Aplikasi Kasir - Point of Sale Suite
# Copy file ini ke .env.local dan sesuaikan dengan konfigurasi Anda
# ======================================================================

# ======================================================================
# DATABASE CONFIGURATION
# ======================================================================

# PostgreSQL Database URL
# Format: postgresql://username:password@host:port/database
DATABASE_URL="postgresql://postgres:password@localhost:5432/pos_kasir"

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=20000
DB_POOL_CONNECT_TIMEOUT=10000

# ======================================================================
# NEXT.JS CONFIGURATION
# ======================================================================

# Next.js Environment
NODE_ENV="development"

# Next.js URL (untuk production)
NEXTAUTH_URL="http://localhost:3000"

# Next.js Secret (generate dengan: openssl rand -base64 32)
NEXTAUTH_SECRET="your-nextauth-secret-key-here"

# ======================================================================
# APPLICATION CONFIGURATION
# ======================================================================

# Application Name
APP_NAME="POS Kasir Suite"
APP_VERSION="1.0.0"
APP_DESCRIPTION="Aplikasi Point of Sale untuk Kasir Indonesia"

# Company Information
COMPANY_NAME="Nama Perusahaan Anda"
COMPANY_ADDRESS="Alamat Perusahaan Anda"
COMPANY_PHONE="+62-21-1234-5678"
COMPANY_EMAIL="info@perusahaan.com"
COMPANY_NPWP="12.345.678.9-012.345"

# Default Branch Configuration
DEFAULT_BRANCH_CODE="CAB001"
DEFAULT_BRANCH_NAME="Cabang Utama"

# ======================================================================
# SECURITY CONFIGURATION
# ======================================================================

# JWT Configuration
JWT_SECRET="your-jwt-secret-key-here"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_EXPIRES_IN="7d"

# Password Hashing
BCRYPT_ROUNDS=12

# Session Configuration
SESSION_SECRET="your-session-secret-key-here"
SESSION_MAX_AGE=86400000
# 24 hours in milliseconds

# CORS Configuration
CORS_ORIGIN="http://localhost:3000"
CORS_CREDENTIALS=true

# ======================================================================
# BUSINESS CONFIGURATION
# ======================================================================

# Tax Configuration (PPN Indonesia)
DEFAULT_TAX_RATE=0.11
# 11% PPN
TAX_INCLUSIVE=false
# false = tax exclusive, true = tax inclusive

# Currency Configuration
CURRENCY_CODE="IDR"
CURRENCY_SYMBOL="Rp"
CURRENCY_LOCALE="id-ID"
CURRENCY_PRECISION=0
# 0 decimal places for IDR

# Rounding Configuration
ROUNDING_ENABLED=true
ROUNDING_TO=100
# Round to nearest 100 Rupiah

# Timezone Configuration
TIMEZONE="Asia/Jakarta"
DATE_FORMAT="DD/MM/YYYY"
TIME_FORMAT="HH:mm:ss"
DATETIME_FORMAT="DD/MM/YYYY HH:mm:ss"

# ======================================================================
# PRINTER CONFIGURATION
# ======================================================================

# Receipt Printer
PRINTER_TYPE="thermal"
# thermal, inkjet, laser
PRINTER_WIDTH=80
# 58mm or 80mm for thermal
PRINTER_DPI=203
PRINTER_AUTO_CUT=true
PRINTER_CASH_DRAWER=true

# Receipt Template
RECEIPT_HEADER="STRUK PEMBELIAN"
RECEIPT_FOOTER="Terima kasih atas kunjungan Anda"
RECEIPT_SHOW_LOGO=true
RECEIPT_SHOW_BARCODE=true

# ======================================================================
# BARCODE SCANNER CONFIGURATION
# ======================================================================

# Scanner Settings
SCANNER_ENABLED=true
SCANNER_AUTO_ENTER=true
SCANNER_PREFIX=""
SCANNER_SUFFIX=""
SCANNER_MIN_LENGTH=8
SCANNER_MAX_LENGTH=20

# ======================================================================
# CASH DRAWER CONFIGURATION
# ======================================================================

# Cash Drawer Settings
CASH_DRAWER_ENABLED=true
CASH_DRAWER_AUTO_OPEN=true
CASH_DRAWER_PULSE_DURATION=100
# milliseconds

# ======================================================================
# BACKUP CONFIGURATION
# ======================================================================

# Database Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
# Daily at 2 AM (cron format)
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION="./backups"

# Data Export
EXPORT_MAX_RECORDS=10000
EXPORT_TIMEOUT=300000
# 5 minutes in milliseconds

# ======================================================================
# LOGGING CONFIGURATION
# ======================================================================

# Log Level
LOG_LEVEL="info"
# error, warn, info, debug

# Log File Configuration
LOG_FILE_ENABLED=true
LOG_FILE_PATH="./logs"
LOG_FILE_MAX_SIZE="10MB"
LOG_FILE_MAX_FILES=5

# Database Query Logging
DB_LOG_QUERIES=false
DB_LOG_SLOW_QUERIES=true
DB_SLOW_QUERY_THRESHOLD=1000
# milliseconds

# ======================================================================
# PERFORMANCE CONFIGURATION
# ======================================================================

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=300
# 5 minutes in seconds
CACHE_MAX_SIZE=100
# MB

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=900000
# 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
UPLOAD_MAX_SIZE=5242880
# 5MB in bytes
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,image/gif,application/pdf"

# ======================================================================
# NOTIFICATION CONFIGURATION
# ======================================================================

# Email Configuration (optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="noreply@yourcompany.com"

# WhatsApp Integration (optional)
WHATSAPP_ENABLED=false
WHATSAPP_API_URL="https://api.whatsapp.com"
WHATSAPP_TOKEN="your-whatsapp-token"
WHATSAPP_PHONE="+62812345678"

# ======================================================================
# INTEGRATION CONFIGURATION
# ======================================================================

# Payment Gateway (optional)
PAYMENT_GATEWAY_ENABLED=false
PAYMENT_GATEWAY_PROVIDER="midtrans"
# midtrans, xendit, etc.
PAYMENT_GATEWAY_SERVER_KEY="your-server-key"
PAYMENT_GATEWAY_CLIENT_KEY="your-client-key"
PAYMENT_GATEWAY_SANDBOX=true

# Accounting Integration (optional)
ACCOUNTING_ENABLED=false
ACCOUNTING_PROVIDER="accurate"
# accurate, zahir, etc.
ACCOUNTING_API_URL="https://api.accurate.id"
ACCOUNTING_API_KEY="your-api-key"

# ======================================================================
# DEVELOPMENT CONFIGURATION
# ======================================================================

# Development Tools
DEV_TOOLS_ENABLED=true
DEV_MOCK_DATA=true
DEV_SEED_DATABASE=true

# Debug Configuration
DEBUG_ENABLED=true
DEBUG_SQL=false
DEBUG_API=false
DEBUG_AUTH=false

# Hot Reload
HOT_RELOAD=true
WATCH_FILES=true

# ======================================================================
# MONITORING CONFIGURATION
# ======================================================================

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
# 30 seconds in milliseconds

# Metrics Collection
METRICS_ENABLED=false
METRICS_PROVIDER="prometheus"
METRICS_PORT=9090

# Error Tracking
ERROR_TRACKING_ENABLED=false
ERROR_TRACKING_PROVIDER="sentry"
SENTRY_DSN="your-sentry-dsn"

# ======================================================================
# FEATURE FLAGS
# ======================================================================

# Feature Toggles
FEATURE_CUSTOMER_MANAGEMENT=true
FEATURE_INVENTORY_MANAGEMENT=true
FEATURE_REPORTING=true
FEATURE_MULTI_BRANCH=true
FEATURE_BARCODE_SCANNER=true
FEATURE_RECEIPT_PRINTER=true
FEATURE_CASH_DRAWER=true
FEATURE_DISCOUNT_MANAGEMENT=true
FEATURE_TAX_CALCULATION=true
FEATURE_PAYMENT_METHODS=true
FEATURE_USER_ROLES=true
FEATURE_AUDIT_LOG=true
FEATURE_DATA_EXPORT=true
FEATURE_BACKUP_RESTORE=true

# Experimental Features
FEATURE_VOICE_COMMANDS=false
FEATURE_AI_RECOMMENDATIONS=false
FEATURE_MOBILE_APP=false
FEATURE_CLOUD_SYNC=false

# ======================================================================
# TAURI CONFIGURATION (Desktop App)
# ======================================================================

# Tauri Settings
TAURI_ENABLED=true
TAURI_DEV_PATH="http://localhost:3000"
TAURI_DIST_DIR="../dist"
TAURI_WITH_GLOBAL_TAURI=false

# Window Configuration
WINDOW_TITLE="POS Kasir Suite"
WINDOW_WIDTH=1200
WINDOW_HEIGHT=800
WINDOW_MIN_WIDTH=800
WINDOW_MIN_HEIGHT=600
WINDOW_RESIZABLE=true
WINDOW_FULLSCREEN=false
WINDOW_ALWAYS_ON_TOP=false

# Auto Updater
AUTO_UPDATER_ENABLED=false
UPDATE_SERVER_URL="https://your-update-server.com"
UPDATE_CHECK_INTERVAL=3600000
# 1 hour in milliseconds

# ======================================================================
# NOTES
# ======================================================================

# 1. Ganti semua nilai "your-*" dengan nilai yang sesuai
# 2. Untuk production, pastikan menggunakan nilai yang aman dan unik
# 3. Jangan commit file .env.local ke repository
# 4. Backup konfigurasi environment variables secara terpisah
# 5. Gunakan tools seperti dotenv-vault untuk mengelola secrets